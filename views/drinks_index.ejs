<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet">
    <title>gitPub</title>
</head>
<body>
    <h1>Welcome to gitPub</h1>
    
    <h2>Drinks</h2>

    <% allDrinks.forEach(function(allDrinks, index){ %>
        <li> <a href="/drinks/<%= index %>">
            <span class="capitalize"><%= allDrinks.name %></span>
        </a></li>
    <% }) %>


</body>
</html>